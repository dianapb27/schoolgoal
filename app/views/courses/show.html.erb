<div class="container mt-4 px-5">
  <% if @course.cover_photo.attached? %>
  <%= cl_image_tag @course.cover_photo.key %>
  <% end %>
  <div class="row">
    <div class="col-8 d-flex flex-column align-items-center">
      <div class="course-show-card">
        <h1>Welcome to <%= @course.title %> <%= @course.category %> class!</h1>
        <p class="course-show-address">Course Category: <%= @course.category %></p>
        <h3>A bit more about this course...</h3>
        <p><%= @course.description %></p>
        <%= link_to "Go Back", courses_path, class: "btn btn-primary" %>
        <% if policy(@course).destroy? %>
        <%= link_to "Remove", course_path(@course),
                  method: :delete,
                  data: { confirm: "Are you sure you want to delete this course?" },
                  class: 'ml-3 text-danger'
                %>
        <% end %>
      </div>
    </div>
    <div class="col-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Book this course!</h5>
          <%= simple_form_for [ @course, @appointment ] do |f| %>
          <%= f.input :start_time, as: :date, html5: true %>
          <%= f.input :end_time, as: :date, html5: true %>
          <% if current_user != @course.teacher %>
          <%= f.submit "Book", class: "btn btn-outline-success btn-block" %>
          <% end %>
          <% end %>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><i class="material-icons mr-2">Teacher:</i><span><%= @course.teacher.first_name %>
              <%= @course.teacher.last_name %></span></li>
          <li class="list-group-item"><i class="material-icons mr-2">Price per hour</i> $<%= @course.price_per_hour %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>