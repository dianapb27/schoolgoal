<% @render_partial = false %>

<div class="container sign-in">

  <h1 class="text-center font-custom bold color-custom">schoolgoal</h1>
  <hr>

  <p class="text-center font-custom">To continue login to schoolgoal</p>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
  </div>

  <div class="form-actions d-flex justify-content-between">
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    <%= f.button :submit, "Log in", class: 'btn btn-custom btn-signin btn-lg btn-block', id: "btn-signin"   %>
  </div>
  <hr>

  <p class="text-center pt-2" style="font-size: 1.1rem;">Don't have an account?</p>

  <%= render "devise/shared/links" %>
  <% end %>

</div>